{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "target": "es6",
    "outDir": "lib",
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "rootDir": "src",
  },
  "include": [
    "src/**/*.ts"
  ]
}
